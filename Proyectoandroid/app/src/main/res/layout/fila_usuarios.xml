<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvTituloFilaUsuario"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="143dp"
        android:text="Nombre Completo"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/tvUsuarioFilaUsuario"
        android:layout_width="303dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/tvTituloFilaUsuario"
        android:layout_marginStart="13dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:text="Nombre Usuario"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/tvTipoFilaUsuario"
        android:layout_width="236dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/tvPasswordFilaUsuario"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="5dp"
        android:text="Tipo Usuario"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />



    <TextView
        android:id="@+id/tvPasswordFilaUsuario"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsuarioFilaUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="151dp"
        android:text="Password" />

    <TextView
        android:id="@+id/tvCorreoFilaUsuario"
        android:layout_width="321dp"
        android:layout_height="24dp"

        android:layout_below="@+id/tvTipoFilaUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:text="Correo" />

    <Button
        android:id="@+id/btnVerUsuario"
        android:layout_width="379dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tvUsuarioFilaUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="5dp"
        android:background="#1c3d57"
        android:text="Ver Usuario"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

</RelativeLayout>